<%count=Objects::Path::Type.count%>
<%=table_for @types, title:@title, collapsible: true, icon: '/icons/road.png' do |t|
  t.title_action objects_new_path_type_url, label: 'ახალი სახეობა', icon: '/icons/plus.png'
  t.edit_action ->(x){objects_edit_path_type_url(id:x.id)}
  t.delete_action ->(x){objects_delete_path_type_url(id:x.id)}
  t.item_action ->(x){objects_up_path_type_url(id:x.id)}, icon: '/icons/arrow-090.png', method:'post', condition:->(x){x.order_by>1}
  t.item_action ->(x){objects_down_path_type_url(id:x.id)}, icon: '/icons/arrow-270.png', method:'post', condition:->(x){x.order_by<count}
  t.text_field 'order_by', tag: 'strong'
  t.text_field 'name', url: ->(x){objects_path_type_url(id:x.id)}
end%>