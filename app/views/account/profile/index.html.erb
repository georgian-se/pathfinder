<%user=current_user
  formatter='%d-%b-%Y %H:%M %Z'%>
<h2 class="page-header"><%=user.full_name%></h2>
<div class="row">
  <div class="col-sm-8">
    <div class="page-header">
      <div class="pull-right">
        <a href="<%= account_edit_profile_url %>" class="btn btn-default">
          <i class="fa fa-pencil"></i>
          <%=t('models.general._actions.edit')%>
        </a>
        </div>
      <h3><%=t('pages.account_profile.index.personal_data')%></h3>
    </div>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td width="200"><%=t('models.sys_user.username')%></td>
          <td>
            <span class="label label-info"><i class="fa fa-user"></i> <%=user.username%></span>
          </td>
        </tr>
        <tr>
          <td><%=t('models.sys_user.password')%></td>
          <td>
            <strong>*******</strong>
            <%=link_to t('pages.account_profile.change_password.title'), account_change_password_url, class: ['btn','btn-xs','btn-success']%>
          </td>
        </tr>
        <tr>
          <td><%=t('models.sys_user.full_name')%></td>
          <td><strong><%=user.full_name%></strong></td>
        </tr>
        <tr>
          <td><%=t('models.sys_user.mobile')%></td>
          <td><code><%=user.formatted_mobile%></code></td>
        </tr>
        <tr>
          <td><%=t('models.general.created_at')%></td>
          <td><strong><%=user.created_at.localtime.strftime(formatter)%></strong></td>
        </tr>
        <tr>
          <td><%=t('models.general.updated_at')%></td>
          <td><strong><%=user.updated_at.localtime.strftime(formatter)%></strong></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>