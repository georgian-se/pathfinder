<%=table_for @users, title:@title, collapsible:true, icon:'/icons/users.png' do |t|
  t.title_action admin_new_user_url, label:t('pages.admin_users.index.new_user'), icon:'/icons/user--plus.png'
  t.text_field 'full_name', url: ->(x){admin_user_url(id:x.id)}
  t.text_field 'username', tag: 'code'
  t.text_field 'formatted_mobile', tag: 'code', i18n: 'mobile'
  t.paginate records:t('models.general.records')
end%>