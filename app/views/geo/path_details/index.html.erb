<%=table_for @details, title: @title, icon: '/icons/magnifier.png', collapsible: true do |t|
  t.title_action geo_new_path_detail_url, label: 'ახალი დეტალი', icon: '/icons/magnifier--plus.png'
  t.edit_action ->(x){geo_edit_path_detail_url(id:x.id)}
  t.delete_action ->(x){geo_delete_path_detail_url(id:x.id)}
  t.item_action ->(x){geo_up_path_detail_url(id:x.id)}, icon: '/icons/arrow-090.png', method:'post', condition:->(x){x.order_by>1}
  t.item_action ->(x){geo_down_path_detail_url(id:x.id)}, icon: '/icons/arrow-270.png', method:'post', condition:->(x){x.order_by<Geo::PathDetail.where(surface:x.surface).count}
  t.text_field 'order_by', tag: 'strong'
  t.text_field 'name', url: ->(x){geo_path_detail_url(id:x.id)}
  t.text_field 'surface.type.name', i18n: 'type'
  t.text_field 'surface.name', i18n: 'surface'
end%>