<div id="user-form"></div>

<script type="text/javascript">
function initUI() {
  var model={first_name:'დიმიტრი',last_name:'ყურაშვილი'};

  var fields=[
    Forma.textField({name:"first_name",label:'სახელი',required:true}),
    Forma.textField({name:"last_name",label:'გვარი',required:true})
  ];

  var form=Forma.form({
    title:'მომხმარებლის შეცვლა',
    icon:'/icons/user--pencil.png',
    fields:fields,
    model:model,
    submit:'შენახვა',
    saveUrl:'/api/users/new.json'
  });
  form.showIn('#user-form');
};
window.onload=initUI;
</script>


